{% extends 'renda.html.twig' %}

{% block content %}
	
	<section class="main-slider">
		<ul class="bxslider">
			{% for i in 0..2 %}
				<li>
					<div class="slider-item" style="height:400px; background-image: url({{ lastNews[i].imgUrl }}); background-size: cover">
						<!--<img src="{{ lastNews[i].imgUrl }}" title="Funky roots" />-->
						<h2><a href="{{ path('post_view', {id: lastNews[i].id}) }}" title="Vintage-Inspired Finds for Your Home">{{ lastNews[i].title }}</a></h2>
					</div>
				</li>
			{% endfor %}	
		</ul>
	</section>
	<section>
		<div class="row">
			<div class="col-md-8">
				{% for news in lastNews %}

					<!-- article -->
					<article class="blog-post">
						<div class="blog-post-image">
							<a href="{{ path('post_view', {id: news.id}) }}"><img src="{{ news.imgUrl }}" alt="img"></a>
						</div>
						<div class="blog-post-body">
							<h2><a href="{{ path('post_view', {id: news.id}) }}">{{ news.title }}</a></h2>
							<div class="post-meta"><span>par <a href="#">{{ news.user.firstName }} {{ news.user.lastName }}</a></span>/<span><i
										class="fa fa-clock-o"></i>{{ news.createdAt | ago }}</span>/<span><i
										class="fa fa-comment-o"></i> <a href="#">343</a></span></div>
							<p>{{ news.content | u.truncate(300,"..." ) }}</p>
							<div class="read-more"><a href="{{ path('post_view', {id: news.id}) }}">Continue Reading</a></div>
						</div>
					</article>

				{% endfor %}
			</div>
			{{include("layout/sidebar.html.twig")}}
		</div>
	</section>

{% endblock %}